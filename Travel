const HomeScreen = ({ navigation }) => {
  return (
    <FlatList
      data={places}
      keyExtractor={(item) => item.id}
      contentContainerStyle={{ padding: 16 }}
      renderItem={({ item }) => (
        <PlaceCard
          title={item.title}
          location={item.location}
          imageUri={item.imageUri}
          onPress={() => navigation.navigate('Detail', item)}
        />
      )}
    />
  )
}

/* ==============================
   Detail Screen
================================ */
const DetailScreen = ({ route }) => {
  const { title, imageUri, description } = route.params

  return (
    <View style={styles.detailContainer}>
      <Image source={{ uri: imageUri }} style={styles.detailImage} />
      <Text style={styles.detailTitle}>{title}</Text>
      <Text style={styles.detailDesc}>{description}</Text>

      <Pressable
        style={styles.bookButton}
        onPress={() => Alert.alert('‡∏à‡∏≠‡∏á‡πÄ‡∏•‡∏¢', '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£‡∏à‡∏≠‡∏á')}
      >
        <Text style={{ color: '#fff', fontWeight: 'bold' }}>‡∏à‡∏≠‡∏á‡πÄ‡∏•‡∏¢</Text>
      </Pressable>
    </View>
  )
}

/* ==============================
   Profile Screen
